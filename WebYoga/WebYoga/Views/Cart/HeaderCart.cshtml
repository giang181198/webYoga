@model List<WebYoga.Models.Cart>
@{
    if (Session["IdKhachHang"] == null)
    {
        <div class="col-sm-6">
            <div class="shopping-item">
                <a href="/Cart/Index">Giỏ hàng - <span class="cart-amunt">Đăng nhập để đặt hàng !</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@Model.Count</span></a>
            </div>
        </div>
    }
    else
    {
        <div class="col-sm-6">
            <div class="shopping-item">
                <a href="/Cart/Index">Giỏ hàng - <span class="cart-amunt">@Model.Count sản phẩm</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@Model.Count</span></a>
            </div>
        </div>
    }
}


