
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in - Voler Admin Dashboard</title>
    <link rel="stylesheet" href="~/Areas/Administrator/Content/assets/css/bootstrap.css">

    <link rel="shortcut icon" href="~/Areas/Administrator/Content/assets/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/Areas/Administrator/Content/assets/css/app.css">
</head>

<body>
    <div id="auth">

        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 mx-auto">
                    <div class="card pt-4">
                        <div class="card-body">
                            <div class="text-center mb-5">
                                <img src="~/Areas/Administrator/Content/assets/images/favicon.svg" height="48" class='mb-4'>
                                <h3>Đăng nhập</h3>
                                <p>Truy cập quản trị website Sản phẩm điện thọai</p>
                            </div>
                            <form action="/Administrator/Home/Login" method="post">
                                <div class="form-group position-relative has-icon-left">
                                    <label for="username">Tên đăng nhập</label>
                                    <div class="position-relative">
                                        <input type="text" class="form-control" id="UserName" name="UserName">
                                        <div class="form-control-icon">
                                            <i data-feather="user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group position-relative has-icon-left">
                                    <div class="clearfix">
                                        <label for="password">Mật khẩu</label>

                                    </div>
                                    <div class="position-relative">
                                        <input type="password" class="form-control" id="Password" name="Password">
                                        <div class="form-control-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class='form-check clearfix my-4'>
                                    <div class="checkbox float-start">
                                        <input type="checkbox" id="checkbox1" class='form-check-input'>
                                        <label for="checkbox1">Lưu mật khẩu</label>
                                    </div>
                                    <div class="float-end">
                                        <a href="auth-register.html">Bạn chưa có tài khoản?</a>
                                    </div>
                                </div>
                                <div class="clearfix">
                                    <button class="btn btn-primary float-end">Đăng nhập</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Areas/Administrator/Content/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/Areas/Administrator/Content/assets/js/app.js"></script>

    <script src="~/Areas/Administrator/Content/assets/js/main.js"></script>
</body>

</html>