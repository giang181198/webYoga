@model List<WebYoga.Model.tblSanPham>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    ViewBag.header = " Danh mục Sản phẩm";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center ">
                <h4 class="card-title">Sản phẩm</h4>

            </div>
            <a class=" btn btn btn-secondary btn-round ml-auto" href="/Administrator/tblSanPham/Create"> <span class="btn-label"><i class="fa fa-plus"></i></span>     Thêm mới  </a>

        </div>
        <div class="main-content container-fluid">
            <div class="table-responsive card-body">
                <table class="table table-bordered mb-0 table-striped" id="table1">


                    <thead class=" table table-secondary ">
                        <tr>
                            <th>ID</th>
                            <th>Sản phẩm</th>
                            <th>Chất liệu</th>
                            <th>Hãng sản xuất</th>
                            <th>Thể loại</th>
                            <th>Màu sắc</th>
                            <th>Xuất xứ</th>
                            <th>Năm sản xuất</th>
                            <th>Trạng thái</th>
                            <th>Số lượng</th>
                            <th>Số lượng bán</th>
                            <th>Giá bán</th>
                            <th>Giá khuyến mại</th>
                            <th>Hình ảnh</th>
                            <th>Mô tả</th>
                            <th>Kích thước</th>
                            <th>Trọng lượng</th>
                            <th>Chức năng</th>


                        </tr>

                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>Id @item.IdSanPham</td>
                                <td>@item.TenSanPham</td>
                                <td>@item.tblChatLieu.TenChatLieu</td>
                                <td>@item.tblHangSanXuat.TenHangSanXuat</td>
                                <td>@item.tblTheLoai.TenTheLoai</td>
                                <td>@item.tblMauSac.TenMauSac</td>
                                <td>@item.tblXuatXu.TenXuatXu</td>
                                <td>@item.tblNamSanXuat.TenNamSanXuat</td>
                                <td>@item.tblTrangThai.TenTrangThai</td>
                                <td>@item.SoLuong</td>
                                <td>@item.SoLuongBan</td>
                                <td>@item.GiaBan.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@item.GiaKhuyenMai.GetValueOrDefault(0).ToString("N0")</td>
                                <td><img src="~/Content/UploadFiles/@item.HinhAnh" style="width:3em; height:4em; " /></td>
                                <td>@item.MoTa</td>
                                <td>@item.KichThuoc</td>
                                <td>@item.TrongLuong</td>



                                <td style="width:150px;">

                                    <a href="/Administrator/tblSanPham/Edit/@item.IdSanPham">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="edit"></i>
                                    </a>
                                    <a href="/Administrator/tblSanPham/Delete/@item.IdSanPham" onclick="return confirm('Bạn có chắc chắn muốn xóa ?');">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="trash-2"></i>
                                    </a>

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/Administrator/Content/assets/js/feather-icons/feather.min.js"></script>
<script src="~/Areas/Administrator/Content/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="~/Areas/Administrator/Content/assets/js/app.js"></script>

<script src="~/Areas/Administrator/Content/assets/vendors/simple-datatables/simple-datatables.js"></script>
<script src="~/Areas/Administrator/Content/assets/js/vendors.js"></script>

<script src="~/Areas/Administrator/Content/assets/js/main.js"></script>