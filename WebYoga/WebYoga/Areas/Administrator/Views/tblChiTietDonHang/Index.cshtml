@model List<WebYoga.Model.tblChiTietDonHang>
@{
    ViewBag.Title = "Quản lý chi tiết đơn hàng";
    ViewBag.header = " Danh mục chi tiết đơn hàng";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center ">
                <h4 class="card-title">Chi tiết đơn hàng</h4>

            </div>
            <a class=" btn btn btn-secondary btn-round ml-auto" href="/Administrator/tblChiTietDonHang/Create"> <span class="btn-label"><i class="fa fa-plus"></i></span>     Thêm mới  </a>

        </div>
        <div class="main-content container-fluid">
            <div class="table-responsive" id="tb">
                <table class="table table-bordered mb-0 table-striped">


                    <thead class=" table table-secondary ">
                        <tr>
                            <th>ID</th>
                            <th>ID đơn hàng</th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Chức năng</th>


                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>Id @item.IdChiTietDonHang</td>
                                <td>@item.IdDonHang</td>
                                <td>@item.tblSanPham.TenSanPham</td>
                                <td>@item.SoLuong</td>


                                <td style="width:150px;">

                                    <a href="/Administrator/tblChiTietDonHang/Edit/@item.IdChiTietDonHang">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="edit"></i>
                                    </a>
                                    <a href="/Administrator/tblChiTietDonHang/Delete/@item.IdChiTietDonHang" onclick="return confirm('Bạn có chắc chắn muốn xóa ?');">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="trash-2"></i>
                                    </a>

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
