@model List<WebYoga.Model.USER>
@{
    ViewBag.Title = "Quản lý User";
    ViewBag.header = " Danh mục User";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center ">
                <h4 class="card-title">User</h4>

            </div>
            <a class=" btn btn btn-secondary btn-round ml-auto" href="/Administrator/USERs/Create"> <span class="btn-label"><i class="fa fa-plus"></i></span>     Thêm mới  </a>

        </div>
        <div class="main-content container-fluid">
            <div class="table-responsive" id="tb">
                <table class="table table-bordered mb-0 table-striped">


                    <thead class=" table table-secondary ">
                        <tr>
                            <th>ID</th>
                            <th>UserName</th>
                            <th>Password</th>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Avatar</th>

                            <th>Chức năng</th>


                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>Id @item.UserId</td>
                                <td>@item.UserName</td>
                                <td>@item.PassWords</td>
                                <td>@item.HoTen</td>
                                <td>@item.DiaChi</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.Email</td>
                                <td>@item.Avatar</td>

                                <td style="width:150px;">

                                    <a href="/Administrator/USERs/Edit/@item.UserId">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="edit"></i>
                                    </a>
                                    <a href="/Administrator/USERs/Delete/@item.UserId" onclick="return confirm('Bạn có chắc chắn muốn xóa ?');">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="trash-2"></i>
                                    </a>

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
