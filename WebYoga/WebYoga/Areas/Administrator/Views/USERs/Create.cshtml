                @Html.EditorFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button id="imgFile" type="button" class="btn btn-success ">
                    <i data-feather="camera" width="20"></i>
                </button>
            </div>
            <script type="text/javascript">$("#imgFile").click(function () {
                    var finder = new CKFinder();
                    finder.selectActionFunction = function (fileUrl) {
                        fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1)
                        $("#Avatar").val(fileUrl);
                    };
                    finder.popup();
                });</script>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
