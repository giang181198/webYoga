@model List<WebYoga.Model.tblTheLoai>
@{
    ViewBag.Title = "Quản lý thể loại";
    ViewBag.header = " Danh mục thể loại";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center ">
                <h4 class="card-title">Thể loại</h4>

            </div>
            <a class=" btn btn btn-secondary btn-round ml-auto" href="/Administrator/tblTheLoai/Create"> <span class="btn-label"><i class="fa fa-plus"></i></span>     Thêm mới  </a>

        </div>
        <div class="main-content container-fluid">
            <div class="table-responsive" id="tb">
                <table class="table table-bordered mb-0 table-striped">


                    <thead class=" table table-secondary ">
                        <tr>
                            <th>ID</th>
                            <th>thể loại</th>

                            <th>Chức năng</th>


                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>Id @item.IdTheLoai</td>
                                <td>@item.TenTheLoai</td>


                                <td>

                                    <a href="/Administrator/tblTheLoai/Edit/@item.IdTheLoai">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="edit"></i>
                                    </a>
                                    <a href="/Administrator/tblTheLoai/Delete/@item.IdTheLoai" onclick="return confirm('Bạn có chắc chắn muốn xóa ?');">
                                        <i class="badge-circle badge-circle-light-secondary font-medium-1"
                                           data-feather="delete"></i>
                                    </a>

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
